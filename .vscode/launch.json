    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${fileDirname}"
        },
        {
            "name": "Debug plot.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${fileDirname}/plot.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${fileDirname}",
            "args": [
                "full",
                "-x", "test",
                "--no-outliers",
                "--clear",
                "-d", "18"
            ]
        }
    ],
}